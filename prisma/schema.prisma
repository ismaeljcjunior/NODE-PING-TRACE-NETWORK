generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model conta {
  ID_CONTA         Int           @id @unique @default(autoincrement())
  CSID             Int           @unique
  ID_EMPRESA       String?       @db.VarChar(10)
  RAZAO            String?       @db.VarChar(150)
  FANTASIA         String?       @db.VarChar(150)
  ENDERECO         String?       @db.VarChar(150)
  ESTADO           String?       @db.VarChar(50)
  CIDADE           String?       @db.VarChar(50)
  EMAIL_RESPOSAVEL String?       @db.VarChar(50)
  NUMERO_CELULAR   String?       @db.VarChar(50)
  NUMERO_FIXO      String?       @db.VarChar(50)
  DATA_CRIACAO     DateTime?     @default(now())
  DATA_ATUALIZACAO DateTime?     @updatedAt
  equipamento      equipamento[]
}

model equipamento {
  ID_EQUIPAMENTO        Int       @id @unique @default(autoincrement())
  DESCRICAO             String?
  CSID                  Int
  ZONA                  String?   @db.VarChar(50)
  PARTICAO              String?   @db.VarChar(50)
  ENDERECO_IP           String?   @unique @db.VarChar(50)
  QUANTIDADE_PING       Int?      @default(10)
  STATUS_EQUIP          String?   @db.VarChar(50)
  STATUS_INICIAL_EVENTO String?   @default("INICIADO")
  STATUS_ENVIO_EVENTO   String?   @db.VarChar(50)
  DATA_CRIACAO          DateTime? @default(now())
  DATA_ATUALIZACAO      DateTime? @updatedAt

  conta conta @relation(fields: [CSID], references: [CSID])
}

model ping {
  ID_PING           Int       @id @unique @default(autoincrement())
  PERCA_DE_PACOTE   String?   @db.VarChar(50)
  STATUS_IP         String?   @db.VarChar(50)
  ENDERECO_IP       String?   @unique @db.VarChar(50)
  QUANTIDADE_PING   Int?      @default(10)
  HORARIO_REALIZADO DateTime?
  DATA_OFFLINE      DateTime?
  DATA_ONLINE       DateTime?
  DATA_DIFF_ONLINE  String?   @db.VarChar(50)
  DATA_DIFF_OFFLINE String?   @db.VarChar(50)
  DATA_CRIACAO      DateTime? @default(now())
  DATA_ATUALIZACAO  DateTime? @updatedAt
}

